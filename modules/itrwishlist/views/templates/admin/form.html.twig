{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    {{ form_start(itrwishlistForm) }}
    <div class="card">
        <h3 class="card-header">
            <i class="material-icons">settings</i> {{ 'Text form types'|trans({}, 'Modules.Itrwishlist.Admin') }}
        </h3>
        <div class="card-body">
            <div class="form-wrapper">
                {{ form_widget(itrwishlistForm) }}
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary float-right" id="save-button">
                    {{ 'Save'|trans({}, 'Admin.Actions') }}
                </button>
            </div>
        </div>
    </div>
    {{ form_end(itrwishlistForm) }}

    {# Section pour afficher la liste des donn√©es #}
    <h2>{{ 'List of Species' | trans({}, 'Modules.Itrwishlist.Admin') }}</h2>

    <table>
        <thead>
        <tr>
            <th>{{ 'Id' | trans({}, 'Modules.Itrwishlist.Admin') }}</th>
            <th>{{ 'Is Active' | trans({}, 'Modules.Itrwishlist.Admin') }}</th>
            <th>{{ 'Picto' | trans({}, 'Modules.Itrwishlist.Admin') }}</th>
            <th>{{ 'Label' | trans({}, 'Modules.Itrwishlist.Admin') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for species in aSpecies %}
            <tr>
                <td>{{ species.id_species }}</td>
                <td>{{ species.active ? 'Active' : 'Inactive' }}</td>
                <td>{{ species.picto }}</td>
                <td>
                    {% for species_label in label %}
                        {{ species_label }}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}